<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "Новый пароль", required: true, autofocus: true, hint: ("Минимум #{@minimum_password_length} символов" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Подтвердите новый пароль", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Изменить пароль" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
